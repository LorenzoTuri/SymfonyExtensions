<html>
    <head>
        <title>Log in superuser!</title>
        {% block stylesheets %}
            <link href="{{ asset('bundles/lturisymfonyextensions/login.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body class="text-center">
        <main class="form-signin bg-white pb-4 px-5 pt-5 mx-auto">
            <form action="{{ path('lturi_symfonyextensions_adminapi_loginlogout', {action: 'login'}) }}" method="post">
                <input type="hidden" name="token" value="{{ csrf_token('authenticate') }}">

                <img class="mb-3" src="{{ asset('bundles/lturisymfonyextensions/logo.png') }}" alt="" width="72" height="57">
                <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

                <div class="form-group mb-3">
                    <input type="text" id="username" class="form-control form-control-lg" name="username" required="required"/>
                    <label class="form-label" for="username">Username</label>
                </div>

                <div class="form-group mb-3">
                    <input type="text" id="password" class="form-control form-control-lg" name="password" required="required"/>
                    <label class="form-label" for="password">Password</label>
                </div>

                <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
            </form>
        </main>

        {% block javascripts %}
            <script src="{{ asset('bundles/lturisymfonyextensions/login.bundle.js') }}"></script>
        {% endblock %}
    </body>
</html>